@model Library.Models.Account.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset password";
}

@section TopHeaders
{
    <h2 class="text-center mt-4">@ViewBag.Title</h2>
    <hr class="whiteLine" />
}



<form method="post">
    <div asp-validation-summary="All" class="text-danger text-center"></div>

    <input asp-for="Email" type="hidden" />
    <input asp-for="Token" type="hidden" />

    <div class="form-group row">
        <div class="col-sm-6 mx-auto text-center mt-4">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mx-auto text-center">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 mx-auto text-center">
            <input type="submit" value="Reset" class="btn btn-primary" />
        </div>
    </div>
</form>