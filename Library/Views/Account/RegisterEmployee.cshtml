@model Library.Models.Account.RegisterEmployeeViewModel

@using LibraryData
@inject ILibraryBranch  branch

@{
    ViewBag.Title = "Registration";
}

@section TopHeaders
{
    <h2 class="text-center mt-4">Create new account</h2>
    <hr class="whiteLine" />
}



<form method="post">
    <div asp-validation-summary="All" class="text-danger text-center"></div>
    <div class="form-group row">
        <div class="col-sm-6 mx-auto text-center mt-4">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mx-auto text-center">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mx-auto text-center">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 mx-auto text-center">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 mx-auto text-center">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 mx-auto text-center">
            <label asp-for="Telephone"></label>
            <input asp-for="Telephone" class="form-control" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 mx-auto text-center">
            <label asp-for="HomeLibraryBranchName"></label>
            <select asp-for="HomeLibraryBranchName" class="form-control">
                <option value="">Please Select</option>
                @foreach (var branchName in branch.GetAll())
                {
                    <option value="@branchName.Name">@branchName.Name</option>
                }
            </select>
            <span asp-validation-for="HomeLibraryBranchName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mx-auto text-center">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mx-auto text-center">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 mx-auto text-center">
            <input type="submit" value="Create Account" class="btn btn-primary" style="width:auto" />
            <a asp-controller="Administration" asp-action="UsersList" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>