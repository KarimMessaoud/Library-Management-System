@model Library.Models.Account.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot password";
}

@section TopHeaders
{
    <h4 class="text-center mt-4">
        Please, enter your email address
        and we will send you the link
        with witch you will be able to reset your password.
    </h4>

    <hr class="whiteLine" />
}


<form method="post">
    <div asp-validation-summary="All" class="text-danger text-center"></div>
    <div class="form-group row">
        <div class="col-sm-6 mx-auto mt-4 text-center">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 mx-auto text-center"><input type="submit" value="Submit" class="btn btn-primary" /></div>
    </div>
</form>
