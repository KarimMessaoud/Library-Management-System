@using Library.Models.Checkout
@model Library.Models.Checkout.CheckoutViewModel

@{
    ViewBag.Title = @Model.Title;
}



    <div class="clearfix detailHeading">
        <h2 class="text-muted text-center">Place hold on Library item</h2>
    </div>

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <div class="text-center text-dark">
                    <p id="itemTitle">@Model.Title</p>
                    <img class="img-fluid" src="@Model.ImageUrl" />
                </div>
            </div>

            <div class="col-md-9 mt-3 text-dark">
                <p>There are currently @Model.HoldCount holds in the queue for this item.</p>

                <form method="post" asp-controller="Catalog" asp-action="PlaceHold">
                    <input type="hidden" asp-for="AssetId" />
                    <div>
                        Please insert a Library Card ID
                        <div class="row">
                            <div class="col-8">
                                <input asp-for="LibraryCardId" class="form-control form-control-sm" />
                                <span asp-validation-for="LibraryCardId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <input type="submit" value="Place hold" class="btn btn-primary btn-lg" style="width:auto" />
                        <a asp-action="Detail" asp-route-id="@Model.AssetId" class="btn btn-primary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>