@model Library.Models.Catalog.AssetEditBookViewModel

@inject LibraryData.ILibraryAssetService assetService

@{
    ViewBag.Title = "Deleting item";
}

<div class="row mt-4">
    <div class="col-md-6 mx-auto">
        <div class="card text-dark text-center">
            <div class="card-header">
                <h3>Are you sure you want to delete this?</h3>
                <p class="text-danger">@ViewData["ErrorMessage"]</p>
            </div>
            <div class="card-body">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    @if (assetService.GetType(ViewBag.DecryptedId) == "Book")
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Author)
                        </dt>
                    }
                    else
                    {
                        <dt>Director</dt>
                    }

                    <dd>
                        @Html.DisplayFor(model => model.Author)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Year)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Year)
                    </dd>
                    @if (assetService.GetType(ViewBag.DecryptedId) == "Book")
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.ISBN)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ISBN)
                        </dd>
                    }
                    <dd>
                        @Html.DisplayFor(model => model.LibraryBranchName)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-controller="Catalog" asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary" style="width:auto">Back to list</a>
                </form>
            </div>
        </div>
    </div>
</div>