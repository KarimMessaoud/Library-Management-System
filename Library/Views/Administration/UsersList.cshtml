@model IEnumerable<User>

@{
    ViewBag.Title = "List of users";
}

@section TopHeaders
{
    <h2 class="text-center mt-4">All users</h2>
    <hr class="whiteLine" />
}

@if (Model.Any())
{
    <div class="col-md-3 mt-5 mb-3 mr-auto">
        <a asp-controller="Account" asp-action="RegisterEmployee"
           class="btn btn-primary" style="width:auto">
            Add new user
        </a>
    </div>

    <div class="table-responsive">
        <table class="table text-white mt-4">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Username</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.UserName</td>
                        <td>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id">Edit</a> |
                                
                                    <span id="confirmDeleteSpan_@user.Id" style="display: none">
                                        <span>Are you sure you want to delete?</span>
                                        <br />
                                            <button type="submit" class="btn btn-danger">Yes</button>
                                            <a href="#" onclick="confirmDelete('@user.Id', false)" class="btn btn-primary">No</a>
                                    </span>
                                    <span id="deleteSpan_@user.Id">
                                        <a href="#" onclick="confirmDelete('@user.Id', true)">Delete</a>
                                    </span>
                                
                            </form>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="card text-dark text-center mt-5">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a asp-controller="Account" asp-action="RegisterEmployee"
               class="btn btn-primary" style="width:auto">
                Add new user
            </a>
        </div>
    </div>
}

@section Scripts
{
    <script src="~/js/site.js"></script>
}