@model Library.Models.Administration.EditRoleViewModel

@{
    ViewBag.Title = "Edit role";
}

@section TopHeaders
{
    <h2 class="text-center mt-4">@ViewBag.Title</h2>
    <hr class="whiteLine" />
}


<form method="post" class="mt-3">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row mt-5">
        <label asp-for="Id" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12 text-center">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="RolesList" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card text-dark text-center mt-5">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                @foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or Remove Users</a>
        </div>
    </div>
</form>